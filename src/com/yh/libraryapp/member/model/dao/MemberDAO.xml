<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yh.libraryapp.member.dao.MemberDAO">
    <resultMap type="member" id="memberResultMap">
    	<id column="MEM_NUM" property="mem_num"/>
    	<result column="MEM_NAME" property="mem_name"/>
    	<result column="MEM_EMAIL" property="mem_email"/>
    	<result column="PWD" property="pwd"/>
    	<result column="CONFIRM_PWD" property="confirm_pwd"/>
    	<result column="LIB_REGI_NAME" property="lib_regi_name"/>
    	<result column="LOAN_NUM" property="loan_num"/>
    	<result column="RSR_NUM" property="rsr_num"/>
    	<result column="DUE_DATE" property="due_date" javaType="java.sql.Date"/>
    	<result column="MTL_LOAN_DATE" property="mtl_loan_date" javaType="java.sql.Date"/>
    </resultMap>
 
    <select id="login" parameterType="member" resultMap="memberResultMap">
        select MEM_NUM, MEM_NAME, MEM_EMAIL, LOAN_NUM, RSR_NUM,
        		DUE_DATE, MTL_LOAN_DATE
        from MEMBER 
        where MEM_EMAIL = #{mem_email}
    </select>
</mapper>
